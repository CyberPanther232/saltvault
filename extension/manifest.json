{
  "name": "SaltVault",
  "description": "An extension for the saltvault password manager to securely manage your passwords and sensitive information.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "base.html",
    "default_icon": "salt_vault_repo_logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
  
}