[Application Environment Variables]

# Core application settings
FLASK_ENV=production              # 'development' or 'production'
DEBUG=False                       # Flask debug mode (True/False)
HOST=0.0.0.0                      # Host interface to bind
PORT=8080                         # Port for Flask dev server (ignored by gunicorn)

# Database configuration
DATABASE_PATH=app/data/dev_database.db   # SQLite file path (change for production)
DATABASE_NAME=dev_database.db            # Optional name (not directly used if DATABASE_PATH is full path)

# Security & Sessions
SECRET_KEY=override_only_if_you_need_to  # Normally auto-generated & persisted in instance/secret_key
SESSION_COOKIE_SECURE=True               # Use True in production (requires HTTPS)
SESSION_COOKIE_HTTPONLY=True             # Prevent JS access to session cookie
SESSION_COOKIE_SAMESITE=Strict           # Strict|Lax|None (None requires Secure over HTTPS)
PERMANENT_SESSION_LIFETIME=3600          # Session lifetime (seconds) if set
TOTP_ISSUER=SaltVault                    # Issuer name shown in authenticator app

# Logging
LOG_DIRECTORY=app/logs/                  # Directory for log files
LOG_LEVEL=INFO                           # DEBUG|INFO|WARNING|ERROR

# Optional feature flags (future expansion placeholders)
# ENABLE_IMPORT_BITWARDEN=True
# ENABLE_IMPORT_NORDPASS=True

# Nginx / Deployment hints (used by setup scripts, not Flask directly)
APP_DOMAIN=example.com                   # Domain used for SSL and external access
SSL_MODE=cloudflare                      # cloudflare|existing|self-signed (script usage)

# Gunicorn settings (used externally when deploying)
WORKERS=3                                # Gunicorn workers (set in docker-compose or command line)
THREADS=2                                # Gunicorn threads per worker

# Notifications (optional)
DISCORD_WEBHOOK_URL=                     # Discord webhook for security & audit events
ENABLE_DISCORD_NOTIFICATIONS=False       # Global enable for Discord notifications
DISCORD_ALERT_SECURITY=True              # Per-category toggle: security
DISCORD_ALERT_LOGIN=True                 # Per-category toggle: login
DISCORD_ALERT_IMP_EXP=True               # Per-category toggle: import/export
DISCORD_ALERT_DELETE=True                # Per-category toggle: deletion
EMAIL_ENABLED=False                      # Set True to enable SMTP email notifications
SMTP_SERVER=                             # e.g. smtp.mailprovider.com
SMTP_PORT=587                            # Typical TLS port
SMTP_USER=                               # SMTP auth username
SMTP_PASSWORD=                           # SMTP auth password (use secrets manager in production)
EMAIL_FROM=                              # Override sender (defaults to SMTP_USER if blank)
EMAIL_TO=                                # Destination email for notifications

# Notes:
# 1. Do NOT delete instance/secret_key once generated; it stabilizes sessions & MFA.
# 2. SECRET_KEY here will override the persisted file ONLY if set. Recommended to leave unset.
# 3. If SESSION_COOKIE_SAMESITE=None ensure SESSION_COOKIE_SECURE=True for modern browsers.
# 4. For local dev over HTTP set SESSION_COOKIE_SECURE=False and possibly SAMESITE=Lax.
# 5. Adjust LOG_LEVEL to DEBUG during troubleshooting; keep INFO or WARNING in production.
